<h1>Check out your cart</h1>
<div class="row">
	<div class="col-md-6">
		<h4>Shipping Information</h4>
		<%= form_for @order do |f| %>
		<div class="form-group">
			<%= f.label :customer_name, class: 'form-control-label' %>
			<%= f.text_field :customer_name, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :phone_number, class: 'form-control-label' %>
			<%= f.text_field :phone_number, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :address, class: 'form-control-label' %>
			<%= f.text_field :address, class: 'form-control' %>
		</div>
		<% if @order.order_details.count > 0 %>
		<%= f.submit 'Check out'%>
		<% end %>
		<% end %>
	</div>
	<div class="col-md-6">
		<% @order.order_details.each do |detail| %>
		<div class="row">
			<div class="col-md-6">
				<%= "#{detail.quantity} x #{detail.food_item.name}" %>
			</div>
			<div class="col-md-6 item-price">
				<%= number_to_currency detail.price, locale: :vi, precision: 0 %>
			</div>
		</div>
		<% end %>
		<div class="row">
			<div class="col-md-6">
				Shipping fee:
			</div>
			<div class="col-md-6 total">
				<%= number_to_currency 20000, locale: :vi, precision: 0 %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				Total:
			</div>
			<div class="col-md-6 total">
				<%= number_to_currency @order.total_price, locale: :vi, precision: 0 %>
			</div>
		</div>
	</div>
</div>
